<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titleBg">
    <include layout="@layout/item_title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="35dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="18dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="19dp"
                            android:background="@mipmap/ico_mobile" />
                    </LinearLayout>
                    <EditText
                        android:id="@id/register_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入手机号"
                        style="@style/registerStyle" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/titleBg"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="18dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center">
                        <View
                            android:layout_width="18dp"
                            android:layout_height="19dp"
                            android:background="@mipmap/ico_user_add" />
                    </LinearLayout>

                    <EditText
                        android:id="@id/register_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入邮箱"
                        style="@style/registerStyle" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/titleBg"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="18dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center">
                        <View
                            android:layout_width="15dp"
                            android:layout_height="19dp"
                            android:background="@mipmap/ico_password_t" />
                    </LinearLayout>


                    <EditText
                        android:id="@id/register_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入密码"
                        style="@style/registerStyle"
                        android:password="true" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/titleBg"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="18dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center">
                        <View
                            android:layout_width="15dp"
                            android:layout_height="19dp"
                            android:background="@mipmap/ico_password" />
                    </LinearLayout>
                    <EditText
                        android:id="@id/register_pass_correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请再次输入密码"
                        style="@style/registerStyle"
                        android:password="true" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/titleBg"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <Button
                android:id="@id/register_next_step"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="85dp"
                android:text="下一步"
                android:textColor="#8e8d8e"
                android:textSize="18sp"
                android:background="@drawable/next_btn_shape" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用金康晟,即表示您同意"
                    android:textSize="12sp"
                    android:textColor="#747474"
                    android:padding="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《金康晟用户版注册协议》"
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:textColor="#3d96e2"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>