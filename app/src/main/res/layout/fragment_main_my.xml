<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfb">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:background="@mipmap/bg_d"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@id/my_image_head"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:src="@mipmap/icon_head"
                app:civ_border_width="1dp"
                app:civ_border_color="#e2e2e2"
                android:layout_gravity="center" />
            <TextView
                android:id="@id/my_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="woshiku"
                android:textSize="15sp"
                android:layout_marginTop="14dp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="#e2e2e2">
        <LinearLayout
            android:id="@id/home_fragment_my_preorder_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bt_shape_bg_selector"
            android:layout_marginBottom="1px"
            android:gravity="center">
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/ico_yydd"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#666666"
                android:textSize="15sp"
                android:text="预约订单"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@id/my_wallet_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bt_shape_bg_selector"
            android:layout_marginBottom="1px"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            android:gravity="center">
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/ico_wdqb"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#666666"
                android:textSize="15sp"
                android:text="我的钱包"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@id/my_news_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bt_shape_bg_selector"
            android:layout_marginBottom="1px"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/fragment_main_my_line"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@mipmap/ico_xxtz"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="消息通知"
                        />
                </LinearLayout>
                <View
                    android:id="@+id/fragment_my_message_point"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_toRightOf="@+id/fragment_main_my_line"
                    android:background="@drawable/red_round_point"
                    android:layout_marginTop="10dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@id/my_scroll_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>
</LinearLayout>