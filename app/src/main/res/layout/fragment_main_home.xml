<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.woshiku.hospitalclient.view.HomeTitleView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.woshiku.hospitalclient.view.HomeTitleView>
    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_item_color"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="134dp"
                app:indicator_width="5dp"
                app:indicator_height="5dp"
                app:indicator_drawable_unselected="@drawable/gray_radius"
                app:indicator_drawable_selected="@drawable/blue_radius">
            </com.youth.banner.Banner>
            <include layout="@layout/fragment_main_home_table"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>