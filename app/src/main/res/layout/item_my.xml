<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@id/item_my_line_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@id/item_top_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"
        />
    <RelativeLayout
        android:id="@id/item_my_relate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_shape_bg_selector"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout"
            android:gravity="center_vertical">
            <ImageView
                android:id="@id/item_my_icon_left"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_launcher" />
            <TextView
                android:id="@id/item_my_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@id/item_my_icon_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ico_more"
                android:layout_alignTop="@+id/linearLayout" />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:id="@id/item_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"
        />
</LinearLayout>