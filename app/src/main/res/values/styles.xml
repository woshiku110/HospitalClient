<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="family_input_style">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="common_text_title">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="common_text_content">
        <item name="android:textColor">#8e8e8e</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="common_text_blue_content">
        <item name="android:textColor">@color/titleBlue</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="registerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#a9a9a9</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>
    <style name="roomRateBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>
    <style name="commentAnim">
        <item name="android:activityOpenEnterAnimation">@anim/jump_in</item>
        <item name="android:activityOpenExitAnimation">@anim/jump_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/jump_in</item>
        <item name="android:activityCloseExitAnimation">@anim/jump_out</item>
    </style>
    <!--@android:style/Animation.Activity-->
    <style name="myTransparent" parent="TranslucentTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/commentAnim</item>
    </style>
</resources>
