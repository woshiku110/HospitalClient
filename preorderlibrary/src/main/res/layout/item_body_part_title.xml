<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/item_body_part_title_width"
    android:layout_height="@dimen/item_body_part_title_height"
    android:background="#dbdbdb">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@id/body_part_title_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:background="#f0f0f0"
            android:gravity="center">
            <TextView
                android:id="@id/body_part_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="test"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@id/body_part_title_mark"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#3d96e2">
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>