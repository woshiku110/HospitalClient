<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/timelineview_middle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="等待缴费"
            android:layout_gravity="center"
            android:textSize="@dimen/choose_txt_size"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_below="@+id/text_middle">
            <ImageView
                android:id="@+id/image_middle"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@drawable/selected_point"
                android:layout_centerInParent="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/unselected_state"
                android:layout_toLeftOf="@+id/image_middle"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/unselected_state"
                android:layout_toRightOf="@+id/image_middle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5px"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>