<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="178dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/titleBlue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bt_unselect_bg_shape"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/time_line_top"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:background="@android:color/white"
                android:layout_marginLeft="15dp">
                <ImageView
                    android:id="@+id/item_icon_check"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/icon_ticket"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/item_desc_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="确认送达"
                    android:layout_toRightOf="@+id/item_icon_check"
                    android:layout_marginLeft="13dp"
                    android:textSize="19sp"
                    android:textColor="@color/new_orange_color"
                    />
                <TextView
                    android:id="@+id/item_no_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编号 : "
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/item_desc_txt"
                    android:layout_below="@+id/item_desc_txt"
                    android:textColor="@color/new_orange_color"
                    android:layout_marginTop="1dp"
                    android:visibility="invisible"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/check_ticket_height"
                android:layout_below="@+id/time_line_top"
                android:background="@drawable/bt_unselect_bg_shape_one"
                android:gravity="center">
                <com.woshiku.dialoglib.view.TimeLineView
                    android:id="@+id/time_line_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </com.woshiku.dialoglib.view.TimeLineView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>